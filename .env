# Translation Tools Environment Configuration
# This file provides environment variables for the translation management tools

# Project root directory (where you run the tools from)
PROJECT_ROOT=/home/bitter/.config/quickshell/ii

# Translation files directory
TRANSLATIONS_DIR=/home/bitter/.config/quickshell/ii/translations

# Source code directory (contains QML and JS files to scan)
SOURCE_DIR=/home/bitter/.config/quickshell/ii

# Tools directory
TOOLS_DIR=/home/bitter/.config/quickshell/ii/translations/tools

# Default language for syncing operations
DEFAULT_SOURCE_LANG=en_US

# Python interpreter
PYTHON_INTERPRETER=python3

# Additional options
CREATE_BACKUPS=true
AUTO_CONFIRM=false

# Export variables for shell scripts
export PROJECT_ROOT
export TRANSLATIONS_DIR
export SOURCE_DIR
export TOOLS_DIR
export DEFAULT_SOURCE_LANG
export PYTHON_INTERPRETER
export CREATE_BACKUPS
export AUTO_CONFIRM
